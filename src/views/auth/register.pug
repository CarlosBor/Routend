extends ../layout
block content  
    h1 New Member
    form(action="/auth/register", method="post") 
        label.form-label(for="name") Name 
        input.form-input(type="text" name="name" id="name" required) 

        label.form-label(for="email") Email
        input.form-input(type="email" name="email" id="email" required)

        label.form-label(for="password") Password
        input.form-input(type="password" name="password" id="password" required)

        label.form-label(for="firstAid") First aid knowledge 
        select.form-input(name="firstAid")
            option(value=0) No 
            option(value=1) Yes   
        button Sign up

